<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mshultz.charpel.rstead.bgoff.paintingapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <mshultz.charpel.rstead.bgoff.paintingapplication.PaintView
            android:id="@+id/signature_canvas"
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:background="@android:color/white"
            android:textColor="#FFFFFF" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorControlHighlight"
            android:elevation="8dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="center">

                <Button
                    android:id="@+id/button_color"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_action_settings"
                    android:onClick="setColor"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="0dp" />

                <Button
                    android:id="@+id/button_brush"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_action_brush"
                    android:onClick="setBrushSize"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button_save"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_action_save"
                    android:elevation="1dp"
                    android:onClick="onSaveClick" />

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_action_trash"
                    android:onClick="clearCanvas"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="0dp" />

            </TableRow>

        </TableLayout>

        <!-- content fixated to the bottom of the screen -->

    </LinearLayout>

</FrameLayout>

